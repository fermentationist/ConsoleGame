{
  "compilerOptions": {
    "lib": ["esnext", "DOM"],
    "target": "es2017",
    "module": "esnext",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "test"]
}